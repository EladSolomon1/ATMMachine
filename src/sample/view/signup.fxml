<AnchorPane prefHeight="400.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.controller.SignupController">
   <children>
      <AnchorPane prefHeight="80.0" prefWidth="700.0" style="-fx-background-color: #FFCD98;">
         <children>
            <Label layoutX="323.0" layoutY="23.0" text="ATM">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <ImageView fx:id="signUpBackImage" fitHeight="70.0" fitWidth="67.0" layoutX="14.0" layoutY="5.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../assets/image-asset.png" />
               </image>
            </ImageView>
         </children>
      </AnchorPane>
      <JFXTextField fx:id="signUpFirstName" focusColor="#424242" layoutX="130.0" layoutY="95.0" prefHeight="29.0" prefWidth="353.0" promptText="First Name" unFocusColor="#ff6659" />
      <JFXTextField fx:id="signUpLastName" focusColor="#424242" layoutX="130.0" layoutY="141.0" prefHeight="29.0" prefWidth="353.0" promptText="Last Name" unFocusColor="#ff6659" />
      <JFXCheckBox fx:id="signUpCheckBoxMale" layoutX="195.0" layoutY="293.0" selected="true" text="Male" />
      <JFXCheckBox fx:id="signUpCheckBoxFemale" layoutX="333.0" layoutY="293.0" text="Female" />
      <JFXPasswordField fx:id="signUpPassword" focusColor="#424242" layoutX="130.0" layoutY="187.0" prefHeight="29.0" prefWidth="353.0" promptText="Password" unFocusColor="#ff6659" />
