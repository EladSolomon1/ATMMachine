         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </JFXButton>
      <JFXTextField fx:id="signUpEmail" focusColor="#424242" layoutX="130.0" layoutY="233.0" prefHeight="29.0" prefWidth="353.0" promptText="E-mail" unFocusColor="#ff6659" />
   </children>
</AnchorPane>
